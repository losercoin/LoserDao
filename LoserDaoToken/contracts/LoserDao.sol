        public
        onlyOwner
    {
        freeFeeMap[freeContract] = freeFee;
    }

    function addLockAmount(address worker, uint256 amount) public onlyOwner {
        require(_totalLockSupply + amount < maxLockAmount, "over flow lock amount!! ");
        lockTranAddress[worker] += amount;
        maxlockTranAddress[worker] += amount;
        _totalLockSupply += amount;
        _mint(worker, amount);
    }

    function addLockAmount(address[] memory workers, uint256[] memory amounts) public onlyOwner {
        uint amountSum = 0;
        for (uint256 i = 0; i < workers.length; i++) {
            amountSum += amounts[i];
        }
        require(_totalLockSupply + amountSum < maxLockAmount, "over flow lock amount!! ");
        for (uint256 i = 0; i < workers.length; i++) {
            lockTranAddress[workers[i]] += amounts[i];
            maxlockTranAddress[workers[i]] += amounts[i];
            _mint(workers[i], amounts[i]);
        }
        _totalLockSupply += amountSum;
    }

    function releaseLock() public {
        require(block.timestamp - createTime > 24 weeks   , "lock wuyang do not release");//24 weeks
        if (block.timestamp - createTime < 28 weeks) {// 
            require(steplockTranAddress[msg.sender] < 1, "you have release step 1!");
            lockTranAddress[msg.sender] = maxlockTranAddress[msg.sender] - lockTranAddress[msg.sender] / 6;
            steplockTranAddress[msg.sender] = 1;
        } else if (block.timestamp - createTime <  32 weeks ) {//32 weeks
            require(steplockTranAddress[msg.sender] < 2, "you have release step 2!");
            lockTranAddress[msg.sender] = maxlockTranAddress[msg.sender] - (lockTranAddress[msg.sender] / 6) * 2;
            steplockTranAddress[msg.sender] = 2;
        } else if (block.timestamp - createTime <  36 weeks ) {//36 weeks
            require(steplockTranAddress[msg.sender] < 3, "you have release step 3!");
            lockTranAddress[msg.sender] = maxlockTranAddress[msg.sender] - (lockTranAddress[msg.sender] / 6) * 3;
            steplockTranAddress[msg.sender] = 3;
        } else if (block.timestamp - createTime <  40 weeks ) {//40 weeks
            require(steplockTranAddress[msg.sender] < 4, "you have release step 4!");
            lockTranAddress[msg.sender] = maxlockTranAddress[msg.sender] - (lockTranAddress[msg.sender] / 6) * 4;
            steplockTranAddress[msg.sender] = 4;
        } else if (block.timestamp - createTime <  44 weeks ) {//44 weeks
            require(steplockTranAddress[msg.sender] < 5 , "you have release step 5!");
            lockTranAddress[msg.sender] = maxlockTranAddress[msg.sender] - (lockTranAddress[msg.sender] / 6) * 5;
            steplockTranAddress[msg.sender] = 5;
        } else {
            lockTranAddress[msg.sender] = 0;
        }
        
    }

