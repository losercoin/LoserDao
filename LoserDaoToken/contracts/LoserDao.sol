        }

        uint256 afterFeeAmout = amount;
        //transfer Fee
        if (!freeFeeMap[recipient]) {
            afterFeeAmout = amount - (amount * transferFee) / transferFeeBase;
            _totalSupply -= (amount * transferFee) / transferFeeBase;
        }

        _balances[recipient] += afterFeeAmout;

        emit Transfer(sender, recipient, amount);

        _afterTokenTransfer(sender, recipient, amount);
    }

